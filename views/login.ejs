<% layout('layout') -%>
<!-- LOGIN FORM -->
<div class="container main-body">
	<div class="text-center" style="padding:50px 0">
		<div class="logo">login</div>
		<!-- Main Form -->
		<div class="login-form-1" style="border:5px solid #efefef;">
			<form id="login-form" class="text-left">
				<div class="login-form-main-message"></div>
				<div class="main-login-form">
					<div class="login-group">
						<div class="form-group">
							<label for="lg_username" class="sr-only">Username</label>
							<input type="text" class="form-control" id="lg_username" name="lg_username" placeholder="아이디">
						</div>
						<div class="form-group">
							<label for="lg_password" class="sr-only">Password</label>
							<input type="password" class="form-control" id="lg_password" name="lg_password" placeholder="비밀번호">
						</div>
						<!-- 저장하는건 자바스크립트인가? -->
						<div class="form-group login-group-checkbox">
							<input type="checkbox" id="lg_remember" name="lg_remember">
							<label for="lg_remember">로그인 유지</label>
						</div>
					</div>
					<button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>
				</div>
				<div class="etc-login-form">
					<center>
						<table class="Beforelogin">
						  <tr>
						    <td style="border-right:1px #aaaaaa solid; padding-right:17px">
						    	<a href="/findpassword" style="color: #aaaaaa">비밀번호 찾기</a>
						    </td>
						    <td style="padding-left:15px">
						    	<a href="/agreement" style="color: #aaaaaa">회원가입</a>
						    </td>
						  </tr>
						</table>
					</center>
				</div>
			</form>
		</div>
		<!-- end:Main Form -->
	</div>
</div>
